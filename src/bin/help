#!/bin/sh

help_ ()
{
	echo ""
	echo "Hathor, an Ancient Egyptian goddess who personified the principles of love, beauty, music, motherhood and joy. Version: $HATHOR_VERSION"
	echo ""
	echo "You could give me commands, such as:"
	echo "  $ make history (for generating history.txt)"
	echo ""
	echo "Available commands are:"
	echo "  firmware -- tag firmware, build tagged firmware, check/compare built firmware and generate history"
	echo "  history  -- generate history.txt (optional, $ make firmware will also do this)"
	echo "  release  -- copy firmware to athena, send RT ticket"
	echo ""
	echo "Typical workflow of using Hathor would be:"
	echo "  $ make firmware"
	echo "    ... check if output firmware is the same with the working copy"
	echo "    ... modify working copy"
	echo "  $ make firmware (repeat as many times as needed)"
	echo "  $ make release"
	echo "Then everything is done."
	echo ""
}

action=$1
eval help_$action 2> /dev/null
if [ "$?" -ne "0" ] ; then
	help_
fi

