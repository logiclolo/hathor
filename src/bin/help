#!/bin/sh

help_ ()
{
	echo "Hathor, an Ancient Egyptian goddess who personified the principles of love, beauty, music, motherhood and joy."
	echo "  version: $HATHOR_VERSION"
	echo ""
	echo "You could give me commands, such as:"
	echo "  $ make history (for generating history.txt)"
	echo ""
	echo "Available commands are:"
	echo "  firmware -- tag firmware, build tagged firmware and check/compare built firmware"
	echo "  history  -- generate history.txt"
	echo "  release  -- copy firmware to athena, send RT ticket"
	echo ""
	echo "Typical workflow of using Hathor would be:"
	echo "  $ make firmware"
	echo "    ... check if output firmware is the same with the working copy"
	echo "    ... modify working copy"
	echo "  $ make firmware (again)"
	echo "  $ make history"
	echo "  $ make release"
	echo "Then everything is done."
}

action=$1
eval help_$action

